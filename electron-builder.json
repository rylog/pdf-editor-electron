{
  "appId": "com.example.pdf-editor-electron",
  "productName": "Fluid",
  "directories": {
    "output": "build"
  },
  "files": ["dist/**/*", "node_modules/**/*"],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "assets/fluid_256.png"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true
  }
}
