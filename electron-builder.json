{
  "appId": "com.example.pdf-editor-electron",
  "productName": "Fluid PDF",
  "directories": {
    "output": "build"
  },
  "files": ["dist/**/*", "node_modules/**/*"],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "assets/fluid_256.png" 
  },
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "assets/fluid_256.png" 
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "assets/fluid_256.png" 
  }
}
