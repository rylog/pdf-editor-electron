{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "src/declarations.d.ts",
    "config/webpack",
    "electron/**/*"
  ],
  "exclude": ["node_modules/**/*", "public/**/*", "dist/**/*"]
}
